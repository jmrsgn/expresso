<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- custom buttons -->
    <style name="button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!-- tab layout -->
    <style name="TabLayoutAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- nav drawer -->
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/cb_open_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.3</item>
    </style>

    <!-- toolbar -->
    <style name="Expresso.Theme.Custom" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/cb_background_black</item>
    </style>

    <!-- custom text views -->
    <style name="tv_headline_1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">96sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_headline_2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">60sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_headline_3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_headline_4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">34sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_headline_5" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_headline_6" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_subtitle_1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_subtitle_2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.001</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_roboto_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_body_1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_open_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_body_2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0025</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_open_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_button" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_open_sans_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_caption" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.004</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_open_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_overline" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/cb_open_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- custom buttons -->
    <style name="btn_contained" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/cb_surface</item>
        <item name="android:textAppearance">@style/tv_button</item>
        <item name="shapeAppearanceOverlay">@style/btn_round_corners_10dp</item>
    </style>

    <style name="btn_borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/tv_button</item>
    </style>

    <style name="btn_round_corners_10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <!-- dialogs -->
    <style name="dialog_popup" parent="android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>