        <item name="colorPrimary">@color/cb_background_black</item>
        <item name="colorPrimaryVariant">@color/cb_background_black</item>
        <item name="colorOnPrimary">@color/cb_background_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
